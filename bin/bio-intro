#!/usr/bin/ruby

$: << File.expand_path('../lib', File.dirname(__FILE__))
require 'biosphere/ui'
require 'biosphere/config'

ui = Biosphere::UI.new(:argv => ARGV)
config = Biosphere::Config.new

if ARGV.include?('--help')
  ui.separator
  ui.info "  This command explains the depths of Biosphere."
  ui.separator
  exit
end

ui.separator
ui.info %q{   The Philosophy}.magenta.bold
ui.separator
ui.info %q{   The philosophy of Biosphere is simple:}
ui.info %{   #{'Never'.bold} touch anything #{'outside'.bold} of the directory #{config.biosphere_path.bold}}
ui.separator
ui.info %q{   There are, however, a few exceptions...}
ui.separator
ui.info %q{   Press Enter to continue...}.blue
ui.pause

10.times { ui.separator }

ui.info %q{   The Few Exceptions}.magenta.bold
ui.separator
ui.info %q{   Biosphere will add something to the following files:}
ui.separator
ui.info %q{        ~/.bash_profile       }.cyan.bold + %{ Loading rbenv and adding the #{'bio'.bold} executable to your PATH}
ui.info %q{        ~/.ssh/known_hosts    }.cyan.bold + %{ Adding SSH fingerprints of hosts that we trust}
ui.info %q{        ~/.ssh/config         }.cyan.bold + %{ Adding shortcuts to the servers we frequently use (e.g. ssh helios)}
ui.separator
ui.info %q{   Biosphere will strictly mark the managed section with } + %q{### BIOSPHERE MANAGED START/STOP ####}.bold + %q{. Nothing else in the file will be modified.}
ui.info %{   If you would like to override the changes made by Biosphere, simply do that #{'below'.bold} the } + %q{### BIOSPHERE MANAGED STOP ####}.bold + %q{ tag.}
ui.separator
ui.info %q{   Biosphere will also create a few files:}
ui.separator
ui.info %q{        ~/.ssh/biosphere_*         }.cyan.bold + %{ These are private SSH keys that you might want to use. E.g. } + %q{~/.ssh/biosphere_helios}.bold
ui.separator
ui.info %q{   Press Enter to continue...}.blue
ui.pause

config[:biosphere_bootstrapped] = true
